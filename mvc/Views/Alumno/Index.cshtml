@model IEnumerable<mvc.Models.Alumno>

@{
    ViewData["Title"] = "Lista de Alumnos";
}

<div class="text-center">
    <h1 class="display-4">Lista de Alumnos</h1>
    <p>Lista de Alumnos</p>
</div>

<div class="row">
    
    <div class="col-3 mb-3">
        <a asp-action="Crear" class="btn btn-primary">Crear un nuevo alumno</a>
    </div>
</div>

<div class="row">
    <div class="offset-12">
        <div class="card border">
            <div class="card-header">
                <h3 class="text-black"> <strong>Lista de Personas</strong> </h3>
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    @if(Model.Count()>0){
                        <table class="table" width="100%">
                            <thead>
                                <tr>
                                    <th>Id</th>
                                    <th>Nombre</th>
                                    <th>Usuario</th>
                                    <th>Email</th>
                                    <th>Acciones</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model){
                                    <tr>
                                        <td>@Html.DisplayFor(modelItem => item.Id) </td>
                                        <td>@Html.DisplayFor(modelItem => item.Nombre) </td>
                                        <td>@Html.DisplayFor(modelItem => item.Usuario) </td>
                                        <td>@Html.DisplayFor(modelItem => item.Email) </td>
                                        <td>
                                            <a class="btn btn-secondary" asp-action="Editar" asp-route-id="@item.Id"> Editar </a>
                                            <a class="btn btn-warning" asp-action="Detalle" asp-route-id="@item.Id"> Detalles </a>
                                            <a class="btn btn-danger" asp-action="Eliminar" asp-route-id="@item.Id"> Borrar </a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    }else{
                        <div class="alert alert-info" role="alert">
                            No hay personas registradas
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
    
</div>
